<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragments.Lista_Fichas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/CapaOtrasIntervenciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center"
                    android:text="Otras intervenciones"
                    android:paddingTop="130dp"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:text="Ampliaciones"
                    android:paddingBottom="30dp"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rdgApliacionOtrasIntervenciones"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdbApliacionNoOtrasIntervenciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No" />

                    <RadioButton
                        android:id="@+id/rdbApliacionSiOtrasIntervenciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Si" />
                </RadioGroup>

                <EditText
                    android:id="@+id/txtNumeroAmpliacionesOtrasIntervenciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Numero de ampliaciones"
                    android:inputType="number" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chkSuperiorOtrasIntervenciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Superior" />

                    <CheckBox
                        android:id="@+id/chkInferiorOtrasIntervenciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Inferior" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chkDerechaOtrasIntervenciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Derecha" />


                    <CheckBox
                        android:id="@+id/chkIzquierdaOtrasIntervenciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Izquierda" />

                </LinearLayout>

                <EditText
                    android:id="@+id/txtDescripcionGeneralAmpliacionesOtrasIntervenciones"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:ems="10"
                    android:hint="Descripcion general"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/CapaCorteEnArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    android:paddingTop="30dp"
                    android:text="Corte en area"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rdgCorteAreaOtrasIntervenciones"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdbCorteAreaSiOtrasIntervenciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Si" />

                    <RadioButton
                        android:id="@+id/rdbCorteAreaNoOtrasIntervenciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                </LinearLayout>

                <EditText
                    android:id="@+id/txtCorteAreaNomenclaturaOtrasIntervenciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Nomenclatura"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/txtCorteAreaDescripcionOtrasIntervenciones"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:ems="10"
                    android:hint="Descripcion general"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/CapaTrinchera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    android:paddingTop="30dp"
                    android:text="Trinchera"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rdgTrincheraOtrasIntervenciones"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdbTrincheraNoOtrasIntervenciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No" />

                    <RadioButton
                        android:id="@+id/rdbTrincheraSiOtrasIntervenciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Si" />
                </RadioGroup>

                <EditText
                    android:id="@+id/txtTrincheraNomenclaturaOtrasIntervenciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Nomenclatura"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/txtTrincheraDescripcionGeneralOtrasIntervenciones"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:ems="10"
                    android:hint="Descripcion general"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/CapaRegistroGrafico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/lblRegistroGrafico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center"
                    android:paddingTop="30dp"
                    android:text="Registro grafico"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnTomarFoto1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tomar foto" />

                    <Button
                        android:id="@+id/btnTomarFoto2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tomar foto" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgView1"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_weight="0.5"
                        app:srcCompat="@android:drawable/ic_menu_report_image" />

                    <ImageView
                        android:id="@+id/imgView2"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_weight="0.5"
                        app:srcCompat="@android:drawable/ic_menu_report_image" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/CapaAnexos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtTotalFotografiasOtrasIntervenciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Fotografias"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/txtTotalDibujosOtrasIntervenciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Dibujos"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/txtTotalOtrosOtrasIntervenciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Otros"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/txtFechaInicioOtrasIntervenciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Fecha inicio"
                    android:inputType="date" />


                <EditText
                    android:id="@+id/txtFechaFinOtrasIntervenciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="fecha fin"
                    android:inputType="date" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnfGuardarOtrasIntervenciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@mipmap/ic_save_white_48dp" />


</FrameLayout>
